@model IEnumerable<SP_Share.Models.ItemLimit>

@{
    ViewBag.Title = "Item Limit List";
}

<h2>Item Limit List</h2>
<p>@Html.ActionLink("Create New", "InsertLimit")</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Limit)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Limit)</td>
        <td>
            @Html.ActionLink("Edit", "ItemLimit", new { idx=item.Idx }) |
            @Html.ActionLink("Delete", "DeleteLimit", new { idx = item.Idx })
        </td>
    </tr>
}
</table>